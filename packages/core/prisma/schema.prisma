generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  PENDING
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

enum UserStatus {
  ACTIVE
  DISABLED
}

model Tool {
  id            String   @id @default(uuid())
  slug          String   @unique
  name          String
  description   String?
  paramsDefine  Json?    // UI schema for parameters
  category      String   @default("DOC") // DOC, IMAGE, VIDEO, AUDIO
  jobs          Job[]
}

model Job {
  id            String    @id @default(uuid())
  toolId        String
  tool          Tool      @relation(fields: [toolId], references: [id])
  status        JobStatus @default(PENDING)
  progress      Int       @default(0)
  errorCode     String?
  errorMessage  String?
  params        Json?     // User provided parameters
  expireAt      DateTime?
  userId        String?
  user          User?     @relation(fields: [userId], references: [id])
  
  // Relations
  jobInputs     JobInput[]
  jobOutput     JobOutput?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status])
}

model JobInput {
  id            String   @id @default(uuid())
  jobId         String
  job           Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  index         Int      // Merge order
  filename      String
  mime          String
  sizeBytes     Int
  storageKey    String   // B2 key
  etag          String?
  createdAt     DateTime @default(now())

  @@unique([jobId, index])
  @@index([jobId])
}

model JobOutput {
  id            String   @id @default(uuid())
  jobId         String   @unique
  job           Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  filename      String   @default("merged.pdf")
  mime          String   @default("application/pdf")
  sizeBytes     Int
  storageKey    String
  createdAt     DateTime @default(now())
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  plan          String    @default("FREE")
  status        UserStatus @default(ACTIVE)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  jobs          Job[]
  password      PasswordCredential?
  roles         UserRole[]
  resetTokens   PasswordResetToken[]
  authLogs      AuthEventLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(uuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordCredential {
  id           String   @id @default(uuid())
  userId       String   @unique
  passwordHash String
  algo         String   @default("bcrypt")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt    DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
}

model Role {
  id    String     @id @default(uuid())
  name  String     @unique // e.g., "ADMIN", "MEMBER"
  users UserRole[]
}

model UserRole {
  userId String
  roleId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

model AuthEventLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  type      String   // LOGIN_SUCCESS, LOGIN_FAIL, etc.
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}
