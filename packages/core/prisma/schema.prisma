generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  PENDING
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

model Tool {
  id            String   @id @default(uuid())
  slug          String   @unique
  name          String
  description   String?
  paramsDefine  Json?    // UI schema for parameters
  category      String   @default("DOC") // DOC, IMAGE, VIDEO, AUDIO
  jobs          Job[]
}

model Job {
  id            String    @id @default(uuid())
  toolId        String
  tool          Tool      @relation(fields: [toolId], references: [id])
  status        JobStatus @default(PENDING)
  progress      Int       @default(0)
  errorCode     String?
  errorMessage  String?
  params        Json?     // User provided parameters
  inputs        Json?     // Input file references
  outputs       Json?     // Output file references
  expireAt      DateTime?
  userId        String?
  user          User?     @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  plan      String   @default("FREE")
  jobs      Job[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
